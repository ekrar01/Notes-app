{
  "version": 2,
  "builds": [
    { "src": "backend/main.py", "use": "@vercel/python" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/main.py" },
    { "src": "/static/(.*)", "dest": "/frontend/static/(.*)" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}